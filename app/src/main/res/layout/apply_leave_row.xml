<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/leaves_layout_bg"
        android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/tv_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaves Type:"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textColor="#0F6698"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_leave"
            android:layout_width="120dp"
            android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_below="@+id/btn_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gradient_line"/>

        <LinearLayout
            android:layout_below="@+id/iv_line1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_total_days"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_RemainingDays_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="#09496E"/>
                <TextView
                    android:id="@+id/tv_RemainingDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:textColor="#0F6698"/>
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:background="#E9ECFF"/>
            <LinearLayout
                android:id="@+id/ll_total_Leaves_days"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_totalLeaves_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Used"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="#09496E"/>
                <TextView
                    android:id="@+id/tv_used_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:textColor="#0F6698"/>

            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:background="#E9ECFF"/>
            <LinearLayout
                android:id="@+id/ll_total_attendance_days"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="#09496E"/>

                <TextView
                    android:id="@+id/tv_total_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#0F6698"
                    android:textSize="25sp" />

            </LinearLayout>
        </LinearLayout>




    </RelativeLayout>
</RelativeLayout>