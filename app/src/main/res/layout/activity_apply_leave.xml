<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    tools:context=".Activity.Apply_Leave_Activity">
    <RelativeLayout
        android:id="@+id/rl_top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1e709e"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="Apply Leave "/>
        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/notification_icon"
            android:visibility="gone"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/rl_top_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_below="@+id/rl_top_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_leaves_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_boarder"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0f6698"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Reason of Leave :"/>
                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="#dcf0ff"/>
                    <RelativeLayout
                        android:id="@+id/rl_hrms"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <EditText
                            android:id="@+id/edt_Leave_type"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:hint=" "
                            android:focusable="false"
                            android:textColorHint="#2d79a5"
                            android:textSize="13.5sp"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal|center_vertical|start"
                            android:background="@drawable/light_blue_boarder"
                            android:layout_marginHorizontal="5dp" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="62dp"
                    android:textColor="#6eb0f6"
                    android:text="Specify The Reason" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dates"
                android:layout_below="@+id/rl_leaves_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:background="@drawable/dark_blue_boarder"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/tv_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f6698"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Leave Dates :"/>
                <View
                    android:id="@+id/vv_line"
                    android:layout_below="@+id/tv_dates"
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:background="#dcf0ff"/>
                <LinearLayout
                    android:layout_below="@+id/vv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rl_from"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/edt_From_Date1"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:hint=" "
                            android:paddingLeft="15dp"
                            android:clickable="false"
                            android:textColorHint="#2d79a5"
                            android:textSize="13.5sp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal|center_vertical|start"
                            android:background="@drawable/light_blue_boarder"
                            android:drawableRight="@drawable/month_calendar"
                            android:layout_marginHorizontal="5dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_to"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/edt_To_Date1"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:hint=" "
                            android:clickable="false"
                            android:textColorHint="#2d79a5"
                            android:textSize="13.5sp"
                            android:paddingLeft="8dp"
                            android:layout_marginTop="20dp"
                            android:drawableRight="@drawable/month_calendar"
                            android:gravity="center_horizontal|center_vertical|start"
                            android:background="@drawable/light_blue_boarder"
                            android:layout_marginHorizontal="5dp" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="43dp"
                    android:textColor="#6eb0f6"
                    android:text="From Date" />
                <TextView
                    android:id="@+id/tv_to"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="95dp"
                    android:layout_marginTop="43dp"
                    android:textColor="#6eb0f6"
                    android:text="To Date" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_days"
                android:layout_below="@+id/dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_boarder"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0f6698"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Total Days :"/>
                    <View
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:background="#dcf0ff"/>
                    <RelativeLayout
                        android:id="@+id/rl_day"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <EditText
                            android:id="@+id/edt_total_days"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:hint=" "
                            android:paddingLeft="15dp"
                            android:text="dasf"
                            android:textColorHint="#2d79a5"
                            android:textSize="13.5sp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal|center_vertical|start"
                            android:background="@drawable/light_blue_boarder"
                            android:layout_marginHorizontal="5dp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0f6698"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Add Comment :"/>
                    <View
                        android:id="@+id/vv_line_comm"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="#dcf0ff"/>
                    <RelativeLayout
                        android:id="@+id/rl_comments"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <EditText
                            android:id="@+id/edt_Leave_reason"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:hint=" "
                            android:paddingLeft="15dp"
                            android:textColorHint="#2d79a5"
                            android:textSize="13.5sp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal|center_vertical|start"
                            android:background="@drawable/light_blue_boarder"
                            android:layout_marginHorizontal="5dp" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="62dp"
                    android:textColor="#6eb0f6"
                    android:text="Enter Number Of Days" />
                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="175dp"
                    android:textColor="#6eb0f6"
                    android:text="Enter Comment" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_documents"
                android:layout_below="@+id/rl_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_boarder"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0f6698"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Documents :"/>
                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="#dcf0ff"/>
                    <RelativeLayout
                        android:id="@+id/rl_document"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:hint=" "
                            android:textColorHint="#2d79a5"
                            android:textSize="12sp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal|center_vertical|start"
                            android:background="@drawable/light_blue_boarder"
                            android:layout_marginHorizontal="5dp" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="62dp"
                    android:textColor="#6eb0f6"
                    android:text="Upload the Documents" />
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/rl_documents"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:id="@+id/tv_Reset"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:text="Reset"
                    android:visibility="visible"
                    android:background="@drawable/upload_btn"/>
                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:text="Submit"
                    android:background="@drawable/manage_profile"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>