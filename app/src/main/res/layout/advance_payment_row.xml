<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RL_part_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg_with_white_border">

                <RelativeLayout
                    android:id="@+id/RR_break_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="14dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/calendar_blue_icon_s" />

                        <TextView
                            android:id="@+id/tv_break_reason1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/iv_edit"
                            android:text="Date Requested"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="#0F6698"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_req_dt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="28 Jan 2022"
                            android:textColor="#646465"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tv_break_reason11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RR_break_reason"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_edit1"
                            android:layout_width="14dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/amount_icon" />

                        <TextView
                            android:id="@+id/tv_break_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/iv_edit1"
                            android:text="Amount Requested"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="#0F6698"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_req_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="5.000 INR"
                            android:textColor="#646465"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tv_break_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_break_reason11"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_edit2"
                            android:layout_width="14dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/status_icon" />

                        <TextView
                            android:id="@+id/tv_break_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/iv_edit2"
                            android:text="Status"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="#0F6698"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="Approved"
                            android:textColor="#646465"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                </RelativeLayout>


        </RelativeLayout>
</RelativeLayout>