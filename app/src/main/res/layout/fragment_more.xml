<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_bg"
    tools:context=".Fragment.MoreFragment">
<!--    Top Nav Bar-->
    <RelativeLayout
        android:id="@+id/rl_top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logout_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1e709e"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="More Options"/>
        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/notification_icon"
            android:visibility="gone"/>
    </RelativeLayout>
        <ScrollView
            android:id="@+id/sv_cards"
            android:layout_below="@+id/rl_top_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--    1st Row ==>> Personal Info & Attendance History-->
                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rl_personal_info"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_bg">
                        <ImageView
                            android:id="@+id/iv_personal_info"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/personal_info"/>
                        <TextView
                            android:layout_below="@+id/iv_personal_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#1e709e"
                            android:layout_marginTop="10dp"
                            android:text="Personal Info"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_attendance"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_bg">
                        <ImageView
                            android:id="@+id/iv_attendance"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/attendance"/>
                        <TextView
                            android:layout_below="@+id/iv_attendance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#1e709e"
                            android:layout_marginTop="10dp"
                            android:text="Attendance"/>
                    </RelativeLayout>
                </LinearLayout>
            <!--    2nd Row ==>> Salary Slip & Leave Apply-->
                <LinearLayout
                    android:id="@+id/ll_second"
                    android:layout_below="@+id/ll_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rl_salary_slip"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_bg">
                        <ImageView
                            android:id="@+id/iv_salary_slip"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/salary_slip"/>
                        <TextView
                            android:layout_below="@+id/iv_salary_slip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#1e709e"
                            android:layout_marginTop="10dp"
                            android:text="Salary Slip"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_leave_apply"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_bg">
                        <ImageView
                            android:id="@+id/iv_leave_apply"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/attendance"/>
                        <TextView
                            android:layout_below="@+id/iv_leave_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#1e709e"
                            android:layout_marginTop="10dp"
                            android:text="Leave Apply"/>
                    </RelativeLayout>
                </LinearLayout>
            <!--    3rd Row ==>> Advance Payments & Achivements-->
                <LinearLayout
                    android:id="@+id/ll_third"
                    android:layout_below="@+id/ll_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rl_advance_payment"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_bg">

                        <ImageView
                            android:id="@+id/iv_advance_payment"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/advance_payment" />
                        <TextView
                            android:layout_below="@+id/iv_advance_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#1e709e"
                            android:layout_marginTop="10dp"
                            android:text="Advance Payment"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_achievements"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/layout_bg"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_achievements"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/acheivement"/>
                        <TextView
                            android:layout_below="@+id/iv_achievements"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#1e709e"
                            android:layout_marginTop="10dp"
                            android:text="Achievements"/>
                    </RelativeLayout>
                </LinearLayout>
        </RelativeLayout>
        </ScrollView>
</RelativeLayout>